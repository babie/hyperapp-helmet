{
  "name": "hyperapp-helmet",
  "version": "0.1.0",
  "description": "A package to rewrite <head> aka Helmet for Hyperapp.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "git@github.com:babie/hyperapp-helmet.git",
  "author": "babie",
  "license": "MIT",
  "scripts": {
    "test:build:watch": "parcel watch test/app/server.ts --out-dir test/app --out-file server.js --target node",
    "test": "jest",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts{,x}\"",
    "lint": "lynt"
  },
  "peerDependencies": {
    "hyperapp": "^1.2.9"
  },
  "devDependencies": {
    "@hyperapp/render": "^2.1.0",
    "@hyperapp/router": "^0.7.1",
    "@types/expect-puppeteer": "^3.3.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.10",
    "@types/jest-environment-puppeteer": "^2.2.1",
    "@types/jsdom": "^12.2.0",
    "@types/puppeteer": "^1.11.1",
    "@types/traverse": "^0.6.32",
    "express": "^4.16.4",
    "hyperapp": "^1.2.9",
    "jest": "^23.6.0",
    "jest-puppeteer": "^3.5.2",
    "jsdom": "^13.0.0",
    "lynt": "^0.5.4",
    "parcel-bundler": "^1.10.3",
    "prettier": "^1.15.3",
    "puppeteer": "^1.11.0",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.1"
  },
  "dependencies": {
    "traverse": "^0.6.6"
  },
  "files": ["dist/**/*"],
  "jest": {
    "preset": "jest-puppeteer",
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "test/.*\\.test\\.tsx?$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  },
  "lynt": {
    "typescript": true,
    "react": true,
    "ignore": ["fixtures/**/*.*"],
    "rules": {
      "jsx-no-lambda": "off"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
